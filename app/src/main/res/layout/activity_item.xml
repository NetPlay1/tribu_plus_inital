<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250sp"
        android:layout_height="250sp"
        style="@style/Widget.Material3.CardView.Filled"
        android:layout_marginTop="40sp"

        android:layout_gravity="center_horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <!--            Todo: rn i'm starching the image with scale type change it-->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/activity_image"
                android:layout_width="match_parent"
                app:shapeAppearance="@drawable/round_corners"
                android:layout_height="124sp"
                android:scaleType="centerCrop"
                android:src="@drawable/quit_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="activity1"/>

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/joinActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                style="@style/Widget.Material3.Button.TonalButton"
                android:text="join now!"
                app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.None"
                />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</FrameLayout>